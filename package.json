{
  "name": "cross-border-ecommerce",
  "version": "1.0.0",
  "description": "跨境电商团队协作平台",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "client": "cd client && npm start",
    "dev:client": "cd client && set PORT=3000 && set NODE_OPTIONS=--openssl-legacy-provider && npm start",
    "install:all": "npm install && cd client && npm install",
    "windows-setup": "powershell ./scripts/setup.ps1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "iconv-lite": "^0.6.3",
    "mongoose": "^6.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.15",
    "nodemon": "^2.0.12"
  },
  "os": {
    "type": "Windows_NT"
  }
}
